# TODO: Create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'

        Spinner:
            id: sort_spinner
            text: 'Sort'
            values: ['Title', 'Year', 'Category', 'Watched']

        Label:
            text: 'Title:'
        TextInput:
            id: title_input

        Label:
            text: 'Category:'
        TextInput:
            id: category_input

        Label:
            text: 'Year:'
        TextInput:
            id: year_input

        Button:
            text: 'Add Movie'
            on_press: app.add_movie(title_input.text, category_input.text, year_input.text)

        Button:
            text: 'Clear'
            on_press: app.clear_fields()

    BoxLayout:
        orientation: 'vertical'
        id: movies_layout

    Label:
        id: message_label
        text: "Welcome!"


